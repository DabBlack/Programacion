package bloque03_cap02;

import java.util.Scanner;

import javax.swing.JOptionPane;

public class Ejercicio03 {

	public static void main(String[] args) {
		
		Scanner sc;
		int num;
		
		System.out.println("Introduzca un número");
		new Scanner(System.in);
		num = sc.nextInt();

		//La condición es que i * num sea menor que 100 para conseguir la lista de múltiplos del número introducido
		for(int i = 0; (i * num) < 100; i++) {

		System.out.println("Los múltiplos son los siguientes: " + (i * num));

		//Si i * num es mayor que 100 el programa termina
		if((i*num > 100)) {
		return;

		}

		}
		System.out.println("El programa ha acabado");
		}
		}
