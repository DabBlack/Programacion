package bloque03;

import javax.swing.JOptionPane;

public class Ejercicio02_calculadora {

	public static void main(String[] args) {
		
		String str;
		int opcion, num1, num2;

		JOptionPane.showInputDialog("Introduzca una opción" + "\n1.- Raices" + "\n2.- Potencias" + "\n3.- División" + "\n0.- Salir de la aplicación");
		
		switch(opcion) {
		case 1:
			System.out.println("La raiz vale: " + (num1 + num2));
			break;
		case 2:
			System.out.println("La potencia vale: " + (num1 - num2));
			break;
		case 3:
			System.out.println("La division vale: " + (num1 / num2));
			break;
		}
		
	}

}
